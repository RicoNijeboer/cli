{
    "name": "rico/cli",
    "description": "The RICO CLI.",
    "homepage": "https://rico.nl",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^7.2.5",
        "laminas/laminas-text": "^2.7",
        "laravel-zero/framework": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php application app:rename"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": ["rico"]
}
